{
  "name": "archetype-ecs",
  "version": "1.3.1",
  "description": "Lightweight archetype-based Entity Component System",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
