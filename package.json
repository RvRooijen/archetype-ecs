    "test": "tsc && tsc -p tsconfig.test.json && node --test dist-test/tests/EntityManager.test.js dist-test/tests/System.test.js",
    "bench": "node --expose-gc bench/multi-ecs-bench.js"
  },
  "keywords": [
    "ecs",
    "entity",
    "component",
    "system",
    "archetype",
    "gamedev"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "bitecs": "^0.4.0",
    "harmony-ecs": "^0.0.12",
    "miniplex": "^2.0.0",
    "typescript": "^5.9.3",
    "wolf-ecs": "^2.0.0"
  }
}
